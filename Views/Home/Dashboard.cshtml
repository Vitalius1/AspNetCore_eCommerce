@{
    ViewData["Title"] = "Dashboard of my SPA | Store";
}
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <ul class="nav navbar-nav">
      <li><a href="/">Dashboard</a></li>
      <li><a href="/products">Products</a></li>
      <li><a href="/orders">Orders</a></li>
      <li><a href="/customers">Customers</a></li>
      <li><a href="/settings">Settings</a></li>
    </ul>
  </div>
</nav>

<div id="search-box">
  <h1>Search</h1>
  
</div>

<div id="all">
  <div id="list">
    @{
      foreach(var p in ViewBag.allProducts)
      {
        <div class="prod">
          <img src="@p.ImageUrl" alt="">
          <span>@p.ProductName</span>
          <span>(@p.TotalQty left)</span>
        </div>
      }
    }
    <a href="#" class="show-more">Show More...</a>
  </div>

  <br>
  <br>

  <div id="orders-list">
    <h4><u>Recent Orders</u></h4>
    <blockquote>
    @{
      foreach(var o in ViewBag.allOrders)
      {
        string time = null;
        TimeSpan duration = DateTime.Now - o.CreatedAt;
        if(duration.Minutes < 60)
        {
          time = duration.Minutes.ToString() + " minutes ago";
        }
        if(duration.Hours > 0)
        {
          time = duration.Hours.ToString() + " hours ago";
        }
        if(duration.Days > 0)
        {
          time = duration.Days.ToString() + " days ago";
        }
        <p>@o.Customer.CustomerName purchased @o.OrderedQty @o.Product.ProductName... (@time)</p>
      }
    }
    </blockquote>
    <a href="#" class="show-more">Show all orders...</a>
  </div>

  <br>
  <br>


</div>